#include <dt-bindings/zmk/matrix_transform.h>
#include <zephyr/dt-bindings/pinctrl/rpi-pico-rp2040-pinctrl.h>
#include "charybdis_mini-layouts.dtsi"

&pio0 {
    status = "okay";

    pio0_uart0: serial {
        status = "okay";
        compatible = "raspberrypi,pico-uart-pio";
        pinctrl-names = "default";
        current-speed = <115200>;
    };
};

/ {
    chosen {
        zmk,physical-layout = &charybdis_3x6_layout;
    };

    wired_split {
        compatible = "zmk,wired-split";
        device = <&pio0_uart0>;
    };

    // TODO: move into the layouts file
    charybdis_3x6_transform: keymap_transform {
        compatible = "zmk,matrix-transform";
        columns = <12>;
        rows = <4>;
        map = <
RC(0, 0) RC(0, 1) RC(0, 2) RC(0, 3) RC(0, 4) RC(0, 5)    RC(0,11) RC(0,10) RC(0, 9) RC(0, 8) RC(0, 7) RC(0, 6)
RC(1, 0) RC(1, 1) RC(1, 2) RC(1, 3) RC(1, 4) RC(1, 5)    RC(1,11) RC(1,10) RC(1, 9) RC(1, 8) RC(1, 7) RC(1, 6)
RC(2, 0) RC(2, 1) RC(2, 2) RC(2, 3) RC(2, 4) RC(2, 5)    RC(2,11) RC(2,10) RC(2, 9) RC(2, 8) RC(2, 7) RC(2, 6)
                           RC(3, 3) RC(3, 4) RC(3, 1)    RC(3, 7) RC(3, 9)
        >;
    };

    kscan0: kscan {
        compatible = "zmk,kscan-gpio-matrix";
        diode-direction = "row2col";
		wakeup-source;
    };
};
